<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/box_size_10"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/comp_work_device_default_ll_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/box_size_45"
            android:paddingStart="@dimen/box_size_18"
            android:paddingEnd="@dimen/box_size_13"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_border_434f5a">

            <TextView
                android:id="@+id/comp_work_device_default_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/color_262626"
                android:textSize="@dimen/txt_size_15" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/comp_work_device_default_iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_slidedown"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comp_work_device_default_ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_size_69"
                android:layout_marginTop="@dimen/box_size_1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/box_size_9"
                    android:paddingStart="@dimen/box_size_15"
                    android:paddingEnd="@dimen/box_size_15"
                    android:orientation="vertical"
                    android:background="@color/color_ffffff">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_ffffff"
                        android:text="@string/work_paper_device_code"
                        android:textSize="@dimen/txt_size_12"
                        android:textColor="@color/color_959595"
                        android:fontFamily="@font/roboto_regular"/>

                    <EditText
                        android:id="@+id/comp_work_device_default_et_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@color/color_ffffff"
                        android:textSize="@dimen/txt_size_15"
                        android:textColor="@color/color_262626"
                        android:fontFamily="@font/roboto_bold"/>
                </LinearLayout>

                <Space
                    android:layout_width="@dimen/box_size_1"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/box_size_9"
                    android:orientation="vertical"
                    android:background="@color/color_ffffff">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/box_size_15"
                        android:paddingEnd="@dimen/box_size_15"
                        android:background="@color/color_ffffff"
                        android:text="@string/work_paper_device_model"
                        android:textSize="@dimen/txt_size_12"
                        android:textColor="@color/color_959595"
                        android:fontFamily="@font/roboto_regular"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/comp_work_device_default_sp_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_size_69"
                android:layout_marginTop="@dimen/box_size_1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/box_size_9"
                    android:paddingStart="@dimen/box_size_15"
                    android:paddingEnd="@dimen/box_size_15"
                    android:background="@color/color_ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/work_paper_device_type"
                        android:textSize="@dimen/txt_size_12"
                        android:textColor="@color/color_959595"
                        android:fontFamily="@font/roboto_regular"/>

                    <RadioGroup
                        android:id="@+id/comp_work_device_default_rg_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/comp_work_device_default_rb_type_new"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingStart="@dimen/box_size_6"
                            android:button="@drawable/cb_circle_button"
                            android:buttonTint="@color/color_434f5a"
                            android:text="@string/work_paper_device_type_new"
                            android:textSize="@dimen/txt_size_15"
                            android:textColor="@color/color_262626"
                            android:fontFamily="@font/roboto_medium"/>

                        <RadioButton
                            android:id="@+id/comp_work_device_default_rb_type_old"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingStart="@dimen/box_size_6"
                            android:button="@drawable/cb_circle_button"
                            android:buttonTint="@color/color_434f5a"
                            android:text="@string/work_paper_device_type_old"
                            android:textSize="@dimen/txt_size_15"
                            android:textColor="@color/color_262626"
                            android:fontFamily="@font/roboto_medium"/>
                    </RadioGroup>
                </LinearLayout>

                <Space
                    android:layout_width="@dimen/box_size_1"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/box_size_9"
                    android:paddingStart="@dimen/box_size_15"
                    android:paddingEnd="@dimen/box_size_15"
                    android:background="@color/color_ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/work_paper_device_status"
                        android:textSize="@dimen/txt_size_12"
                        android:textColor="@color/color_959595"
                        android:fontFamily="@font/roboto_regular"/>

                    <RadioGroup
                        android:id="@+id/comp_work_device_default_rg_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/comp_work_device_default_rb_status_good"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingStart="@dimen/box_size_6"
                            android:button="@drawable/cb_circle_button"
                            android:buttonTint="@color/color_434f5a"
                            android:text="@string/work_paper_device_status_good"
                            android:textSize="@dimen/txt_size_15"
                            android:textColor="@color/color_262626"
                            android:fontFamily="@font/roboto_medium"/>

                        <RadioButton
                            android:id="@+id/comp_work_device_default_rb_status_bad"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingStart="@dimen/box_size_6"
                            android:button="@drawable/cb_circle_button"
                            android:buttonTint="@color/color_434f5a"
                            android:text="@string/work_paper_device_status_bad"
                            android:textSize="@dimen/txt_size_15"
                            android:textColor="@color/color_262626"
                            android:fontFamily="@font/roboto_medium"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/box_size_1"
                android:paddingTop="@dimen/box_size_9"
                android:paddingStart="@dimen/box_size_15"
                android:paddingEnd="@dimen/box_size_15"
                android:background="@color/color_ffffff"
                android:text="@string/work_paper_device_remark"
                android:textSize="@dimen/txt_size_12"
                android:textColor="@color/color_959595"
                android:fontFamily="@font/roboto_regular"/>

            <EditText
                android:id="@+id/comp_work_device_default_et_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/box_size_15"
                android:paddingEnd="@dimen/box_size_15"
                android:paddingTop="@dimen/box_size_10"
                android:paddingBottom="@dimen/box_size_10"
                android:gravity="center_vertical"
                android:background="@color/color_ffffff"
                android:text=""
                android:textSize="@dimen/txt_size_15"
                android:textColor="@color/color_262626"
                android:hint="@string/work_paper_device_remark_hint"
                android:textColorHint="@color/color_262626_20"
                android:fontFamily="@font/roboto_bold"/>
        </LinearLayout>
    </LinearLayout>
</layout>
