<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/box_size_69"
        android:layout_marginTop="@dimen/box_size_1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/box_size_9"
            android:paddingStart="@dimen/box_size_15"
            android:paddingEnd="@dimen/box_size_15"
            android:orientation="vertical"
            android:background="@color/color_ffffff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:text="@string/work_paper_charge_part_name"
                android:textSize="@dimen/txt_size_12"
                android:textColor="@color/color_959595"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:id="@+id/comp_service_part_view_tv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"
                android:textSize="@dimen/txt_size_15"
                android:textColor="@color/color_262626"
                android:fontFamily="@font/roboto_bold"/>
        </LinearLayout>

        <Space
            android:layout_width="@dimen/box_size_1"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/box_size_9"
            android:paddingStart="@dimen/box_size_15"
            android:paddingEnd="@dimen/box_size_15"
            android:orientation="vertical"
            android:background="@color/color_ffffff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:text="@string/work_paper_charge_part_count"
                android:textSize="@dimen/txt_size_12"
                android:textColor="@color/color_959595"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:id="@+id/comp_service_part_view_tv_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"
                android:textSize="@dimen/txt_size_15"
                android:textColor="@color/color_262626"
                android:fontFamily="@font/roboto_bold"/>
        </LinearLayout>
    </LinearLayout>
</layout>
