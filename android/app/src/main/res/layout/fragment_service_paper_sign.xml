<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/service_paper_sign_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/box_size_56"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/service_paper_sign_sv_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ScrollView
            android:id="@+id/service_paper_sign_sv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/service_paper_sign_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_e9eff2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/box_size_69"
                    android:layout_marginTop="@dimen/box_size_1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/box_size_9"
                        android:paddingStart="@dimen/box_size_15"
                        android:paddingEnd="@dimen/box_size_15"
                        android:orientation="vertical"
                        android:background="@color/color_ffffff">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/paper_store_name"
                            android:textSize="@dimen/txt_size_12"
                            android:textColor="@color/color_959595"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:id="@+id/service_paper_sign_tv_store_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textSize="@dimen/txt_size_15"
                            android:textColor="@color/color_262626"
                            android:fontFamily="@font/roboto_bold"/>
                    </LinearLayout>

                    <Space
                        android:layout_width="@dimen/box_size_1"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/box_size_9"
                        android:paddingStart="@dimen/box_size_15"
                        android:paddingEnd="@dimen/box_size_15"
                        android:orientation="vertical"
                        android:background="@color/color_ffffff">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/paper_store_code"
                            android:textSize="@dimen/txt_size_12"
                            android:textColor="@color/color_959595"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:id="@+id/service_paper_sign_tv_store_code"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textSize="@dimen/txt_size_15"
                            android:textColor="@color/color_262626"
                            android:fontFamily="@font/roboto_bold"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/box_size_69"
                    android:layout_marginTop="@dimen/box_size_1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/box_size_9"
                        android:paddingStart="@dimen/box_size_15"
                        android:paddingEnd="@dimen/box_size_15"
                        android:orientation="vertical"
                        android:background="@color/color_ffffff">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/paper_receipt_date"
                            android:textSize="@dimen/txt_size_12"
                            android:textColor="@color/color_959595"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:id="@+id/service_paper_sign_tv_receipt_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textSize="@dimen/txt_size_15"
                            android:textColor="@color/color_262626"
                            android:fontFamily="@font/roboto_bold"/>
                    </LinearLayout>

                    <Space
                        android:layout_width="@dimen/box_size_1"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/box_size_9"
                        android:paddingStart="@dimen/box_size_15"
                        android:paddingEnd="@dimen/box_size_15"
                        android:orientation="vertical"
                        android:background="@color/color_ffffff">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/paper_receipt_time"
                            android:textSize="@dimen/txt_size_12"
                            android:textColor="@color/color_959595"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:id="@+id/service_paper_sign_tv_receipt_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textSize="@dimen/txt_size_15"
                            android:textColor="@color/color_262626"
                            android:fontFamily="@font/roboto_bold"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/box_size_69"
                    android:layout_marginTop="@dimen/box_size_1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/box_size_9"
                        android:paddingStart="@dimen/box_size_15"
                        android:paddingEnd="@dimen/box_size_15"
                        android:orientation="vertical"
                        android:background="@color/color_ffffff">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/paper_visit_date"
                            android:textSize="@dimen/txt_size_12"
                            android:textColor="@color/color_959595"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:id="@+id/service_paper_sign_tv_visit_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textSize="@dimen/txt_size_15"
                            android:textColor="@color/color_262626"
                            android:fontFamily="@font/roboto_bold"/>
                    </LinearLayout>

                    <Space
                        android:layout_width="@dimen/box_size_1"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/box_size_9"
                        android:paddingStart="@dimen/box_size_15"
                        android:paddingEnd="@dimen/box_size_15"
                        android:orientation="vertical"
                        android:background="@color/color_ffffff">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/paper_visit_time"
                            android:textSize="@dimen/txt_size_12"
                            android:textColor="@color/color_959595"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:id="@+id/service_paper_sign_tv_visit_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textSize="@dimen/txt_size_15"
                            android:textColor="@color/color_262626"
                            android:fontFamily="@font/roboto_bold"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/box_size_69"
                    android:layout_marginTop="@dimen/box_size_1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/box_size_9"
                        android:paddingStart="@dimen/box_size_15"
                        android:paddingEnd="@dimen/box_size_15"
                        android:orientation="vertical"
                        android:background="@color/color_ffffff">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/paper_comp_date"
                            android:textSize="@dimen/txt_size_12"
                            android:textColor="@color/color_959595"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:id="@+id/service_paper_sign_tv_comp_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textSize="@dimen/txt_size_15"
                            android:textColor="@color/color_262626"
                            android:fontFamily="@font/roboto_bold"/>
                    </LinearLayout>

                    <Space
                        android:layout_width="@dimen/box_size_1"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/box_size_9"
                        android:paddingStart="@dimen/box_size_15"
                        android:paddingEnd="@dimen/box_size_15"
                        android:orientation="vertical"
                        android:background="@color/color_ffffff">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/paper_comp_time"
                            android:textSize="@dimen/txt_size_12"
                            android:textColor="@color/color_959595"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:id="@+id/service_paper_sign_tv_comp_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textSize="@dimen/txt_size_15"
                            android:textColor="@color/color_262626"
                            android:fontFamily="@font/roboto_bold"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/box_size_69"
                    android:layout_marginTop="@dimen/box_size_1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/box_size_9"
                        android:paddingStart="@dimen/box_size_15"
                        android:paddingEnd="@dimen/box_size_15"
                        android:background="@color/color_ffffff"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/paper_work_type"
                            android:textSize="@dimen/txt_size_12"
                            android:textColor="@color/color_959595"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:id="@+id/service_paper_sign_tv_type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textSize="@dimen/txt_size_15"
                            android:textColor="@color/color_262626"
                            android:fontFamily="@font/roboto_bold"/>
                    </LinearLayout>

                    <Space
                        android:layout_width="@dimen/box_size_1"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/box_size_9"
                        android:paddingStart="@dimen/box_size_15"
                        android:paddingEnd="@dimen/box_size_15"
                        android:background="@color/color_ffffff"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/service_paper_price"
                            android:textSize="@dimen/txt_size_12"
                            android:textColor="@color/color_959595"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:id="@+id/service_paper_sign_tv_price"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textSize="@dimen/txt_size_15"
                            android:textColor="@color/color_262626"
                            android:fontFamily="@font/roboto_bold"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/service_paper_sign_ll_menu_device"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/box_size_40"
                    android:layout_marginTop="@dimen/box_size_1"
                    android:paddingStart="@dimen/box_size_15"
                    android:paddingEnd="@dimen/box_size_15"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/color_ed1c24">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/work_paper_device"
                        android:textSize="@dimen/txt_size_14"
                        android:textColor="@color/color_ffffff"
                        android:fontFamily="@font/roboto_medium"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/service_paper_sign_iv_menu_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_slidedown_wh"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/service_paper_sign_ll_menu_device_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/box_size_15"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/service_paper_sign_rv_device"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/service_paper_sign_ll_device_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- TODO set device selected list here -->
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/service_paper_sign_ll_menu_part"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/box_size_40"
                    android:layout_marginTop="@dimen/box_size_1"
                    android:paddingStart="@dimen/box_size_15"
                    android:paddingEnd="@dimen/box_size_15"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/color_ed1c24">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/work_paper_charge_part"
                        android:textSize="@dimen/txt_size_14"
                        android:textColor="@color/color_ffffff"
                        android:fontFamily="@font/roboto_medium"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/service_paper_sign_iv_menu_part"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_slidedown_wh"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/service_paper_sign_ll_menu_part_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/box_size_15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/service_paper_sign_ll_menu_part_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/box_size_15">

                    <include
                        android:id="@+id/service_paper_sign_inc_signature"
                        layout="@layout/comp_paper_sign"/>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
